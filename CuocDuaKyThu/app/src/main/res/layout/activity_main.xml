<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textviewPoints"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="100"
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"></ImageView>

    <ImageButton
        android:id="@+id/imagebuttonplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@null"
        android:src="@drawable/play_icon"></ImageButton>

    <CheckBox
        android:id="@+id/checkbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/checkbox2"
        android:layout_marginBottom="34dp"></CheckBox>

    <CheckBox
        android:id="@+id/checkbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/checkbox3"
        android:layout_marginBottom="33dp"></CheckBox>

    <CheckBox
        android:layout_alignParentBottom="true"
        android:id="@+id/checkbox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></CheckBox>


    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:id="@+id/seekbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekbar2"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="22dp"
        android:layout_toRightOf="@id/checkbox1"
        android:thumb="@drawable/thumb1"></SeekBar>

    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/thumb2"
        android:id="@+id/seekbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekbar3"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="21dp"
        android:layout_toRightOf="@id/checkbox2"></SeekBar>
    <SeekBar
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/thumb3"
        android:id="@+id/seekbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/checkbox3"></SeekBar>

</RelativeLayout>